{
    "name": "npl-debug",
    "displayName": "NPL Debug",
    "version": "0.2.0",
    "publisher": "tatfook",
    "description": "NPL(Neural Parallel Language) Debugger for VS Code.",
    "author": {
        "name": "Tatfook Co.",
        "email": "lixizhi@yeah.net"
    },
    "license": "MIT",
    "keywords": [
        "multi-root ready"
    ],
    "engines": {
        "vscode": "^1.18.0",
        "node": "^7.9.0"
    },
    "icon": "images/npl-debug-icon.png",
    "categories": [
        "Debuggers"
    ],
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/tatfook/vscode-npl-debug.git"
    },
    "bugs": {
        "url": "https://github.com/tatfook/vscode-npl-debug/issues"
    },
    "scripts": {
        "prepublish": "tsc -p ./src",
        "compile": "tsc -p ./src",
        "tslint": "tslint ./src/**/*.ts",
        "watch": "tsc -w -p ./src",
        "test": "mocha -u tdd ./out/tests/",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "dependencies": {
        "await-notify": "1.0.1",
        "vscode-debugadapter": "1.26.0",
        "vscode-debugprotocol": "1.26.0",
        "request": "2.83.0"
    },
    "devDependencies": {
        "@types/node": "7.0.43",
        "@types/mocha": "2.2.45",
        "typescript": "2.6.2",
        "mocha": "4.0.1",
        "vscode": "1.1.10",
        "vscode-debugadapter-testsupport": "1.26.0",
        "tslint": "5.8.0",
        "vsce": "1.35.0"
    },
    "main": "./out/extension",
    "activationEvents": [
        "onDebug"
    ],
    "contributes": {
        "breakpoints": [
            {
                "language": "markdown"
            },
            {
                "language": "lua"
            },
            {
                "language": "page"
            },
            {
                "language": "npl"
            }
        ],
        "debuggers": [
            {
                "type": "NPL",
                "label": "NPL Debug",
                "program": "./out/NPLDebug.js",
                "runtime": "node",
                "configurationAttributes": {
                    "attach": {
                        "required": [
                            "port"
                        ],
                        "properties": {
                            "port": {
                                "type": "number",
                                "description": "remote http debug port number",
                                "default": 8099
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically stop after launch.",
                                "default": true
                            },
                            "cwd": {
                                "type": [
                                    "string",
                                    "null"
                                ],
                                "description": "current working directory. default to workspaceFolder",
                                "default": null
                            },
                            "searchpath": {
                                "type": "array",
                                "description": "array of search paths. current working directory is added by default",
                                "default": []
                            },
                            "timeout": {
                                "type": "number",
                                "description": "timeout to wait for NPL process to launch",
                                "default": 10000
                            },
                            "trace": {
                                "type": "boolean",
                                "description": "Enable logging of the Debug Adapter Protocol.",
                                "default": true
                            }
                        }
                    },
                    "launch": {
                        "required": [
                            "bootstrapper"
                        ],
                        "properties": {
                            "port": {
                                "type": "number",
                                "description": "remote http debug port number",
                                "default": 8099
                            },
                            "runtimeExecutable": {
                                "type": [
                                    "string",
                                    "null"
                                ],
                                "description": "the name or path to the NPL runtime executable",
                                "default": null
                            },
                            "bootstrapper": {
                                "type": [
                                    "string",
                                    "null"
                                ],
                                "description": "the main NPL script file relative to working directory, such as main_loop.lua. if this is current_open_file, it will use the file that is currently open in the editor",
                                "default": null
                            },
                            "cmdlineParams": {
                                "type": [
                                    "string"
                                ],
                                "description": "additional command line parameters to pass to the NPL runtime",
                                "default": ""
                            },
                            "searchpath": {
                                "type": "array",
                                "description": "array of search paths",
                                "default": []
                            },
                            "cwd": {
                                "type": [
                                    "string",
                                    "null"
                                ],
                                "description": "current working directory. default to workspaceFolder",
                                "default": null
                            },
                            "timeout": {
                                "type": "number",
                                "description": "timeout to wait for NPL process to launch",
                                "default": 10000
                            },
                            "exitAppOnStop": {
                                "type": "boolean",
                                "description": "exit the application when the user stopped debugging",
                                "default": true
                            },
                            "trace": {
                                "type": "boolean",
                                "description": "Enable logging of the Debug Adapter Protocol.",
                                "default": true
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "NPL",
                        "request": "attach",
                        "name": "Attach NPL",
                        "port": 8099,
                        "searchpath": [],
                        "trace": false
                    },
                    {
                        "type": "NPL",
                        "request": "launch",
                        "name": "Launch NPL",
                        "runtimeExecutable": "npl",
                        "bootstrapper": "current_open_file",
                        "cmdlineParams": "",
                        "port": 8099,
                        "searchpath": [],
                        "exitAppOnStop": true,
                        "trace": false
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "NPL Debug: Attach",
                        "description": "attach to NPL HTTP web debugger",
                        "body": {
                            "type": "NPL",
                            "request": "attach",
                            "name": "Attach NPL",
                            "port": 8099,
                            "searchpath": [],
                            "trace": false
                        }
                    },
                    {
                        "label": "NPL Debug: Launch",
                        "description": "Launch NPL HTTP web debugger",
                        "body": {
                            "type": "NPL",
                            "request": "launch",
                            "name": "Launch NPL",
                            "runtimeExecutable": "npl",
                            "bootstrapper": "current_open_file",
                            "cmdlineParams": "",
                            "port": 8099,
                            "searchpath": [],
                            "exitAppOnStop": true,
                            "trace": false
                        }
                    }
                ],
                "variables": {
                    "AskForProgramName": "extension.NPL-debug.getProgramName"
                }
            }
        ]
    }
}