{
	"name": "npl-debug",
	"displayName": "NPL Debug",
	"version": "0.1.0",
	"publisher": "LiXizhi",
	"description": "NPL(Neural Parallel Language) Debugger for VS Code.",
	"author": {
		"name": "Tatfook Co.",
		"email": "lixizhi@yeah.net"
	},
	"license": "MIT",
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.18.0",
		"node": "^7.9.0"
	},
	"icon": "images/npl-debug-icon.png",
	"categories": [
		"Debuggers"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/tatfook/vscode-npl-debug.git"
	},
	"bugs": {
		"url": "https://github.com/tatfook/vscode-npl-debug/issues"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"watch": "tsc -w -p ./src",
		"test": "mocha -u tdd ./out/tests/",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"dependencies": {
		"await-notify": "1.0.1",
		"vscode-debugadapter": "1.26.0",
		"vscode-debugprotocol": "1.26.0"
	},
	"devDependencies": {
		"@types/node": "7.0.43",
		"@types/mocha": "2.2.45",
		"typescript": "2.6.2",
		"mocha": "4.0.1",
		"vscode": "1.1.10",
		"vscode-debugadapter-testsupport": "1.26.0",
		"tslint": "5.8.0",
		"vsce": "1.35.0"
	},
	"config": {
		"unsafe-perm":true
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebug"
	],
	"contributes": {
		"breakpoints": [
			{
				"language": "markdown"
			},
			{
				"language": "lua"
			},
			{
				"language": "page"
			},
			{
				"language": "npl"
			}
		],
		"debuggers": [
			{
				"type": "NPL",
				"label": "NPL Debug",
				"program": "./out/NPLDebugAdapter.js",
				"runtime": "node",
				"configurationAttributes": {
					"attach": {
						"required": [
							"port"
						],
						"properties": {
							"port": {
								"type": "number",
								"description": "remote http debug port number",
								"default": 8099
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							}
						}
					},
					"launch": {
						"required": [
							"program", "port"
						],
						"properties": {
							"port": {
								"type": "number",
								"description": "remote http debug port number",
								"default": 8099
							},
							"program": {
								"type": "string",
								"description": "specify the program name and command line parameters",
								"default": "npl"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "NPL",
						"request": "attach",
						"name": "Attach Http Debugger",
						"port": 8099,
						"stopOnEntry": true
					},
					{
						"type": "NPL",
						"request": "launch",
						"name": "Launch NPL process",
						"program": "npl",
						"port": 8099,
						"stopOnEntry": true
					}
				],
				"configurationSnippets": [
					{
						"label": "NPL Debug: Attach",
						"description": "NPL HTTP web debugger",
						"body": {
							"type": "NPL",
							"request": "attach",
							"name": "Attach Http Debugger",
							"port": 8099,
							"stopOnEntry": true
						}
					},
					{
						"label": "NPL Debug: Launch",
						"description": "Launch NPL HTTP web debugger",
						"body": {
							"type": "NPL",
							"request": "launch",
							"name": "Launch Http Debugger",
							"program": "npl",
							"port": 8099,
							"stopOnEntry": true
						}
					}
				],
				"variables": {
					"AskForProgramName": "extension.NPL-debug.getProgramName"
				}
			}
		]
	}
}
